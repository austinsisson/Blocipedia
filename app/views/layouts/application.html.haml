!!!
%html
  %head
    %title Blocipedia
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %div.container
      - if flash[:notice]
        .alert.alert-success
          .button.close{:data => {:dismiss => "alert"} } ×
          = flash[:notice]
      - elsif flash[:error]
        .alert.alert-danger
          .button.close{:data => {:dismiss => "alert"} } ×
          = flash[:error]
      - elsif flash[:alert]
        .alert.alert-warning
          .button.close{:data => {:dismiss => "alert"} } ×
          = flash[:alert]

      - if current_user
        .navbar.navbar-default
          = link_to "My Page", user_path(current_user), class: 'btn btn-default navbar-btn'
          = link_to "Sign Out", destroy_user_session_path, class: 'btn btn-default navbar-btn', method: :delete
      
      = yield
