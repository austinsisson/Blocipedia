.container
  .col-md-6
    %p.text-center Edit your Wiki using markdown styling below.
    = form_for @wiki do |f|
      - if policy(@wiki).can_add_collaborators?
        = f.check_box :private
        = f.label 'Check for Private, Uncheck for Public'
      = f.submit 'Update', class: 'btn btn-primary'
      %br
      %br
      = f.text_area :content, id: 'editor'


  .col-md-6
    %p.text-center See it displayed live right here!
    %br
    %br
    %br
    #markdown-preview
